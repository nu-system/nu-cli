{
  "name": "@_nu/cli",
  "version": "1.0.2",
  "description": "üõ†Ô∏è Standard Tooling for nu-system component development",
  "main": "index.js",
  "repository": "git@github.com:nu-system/nu-cli.git",
  "author": "ziven27",
  "license": "MIT",
  "bin": {
    "nu-cli": "bin/index.js"
  },
  "keywords": [
    "!ui",
    "nu-system",
    "cli"
  ],
  "scripts": {
    "commit": "git add . && git cz",
    "log": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "commitizenInit": "commitizen init cz-conventional-changelog --yarn --dev --exact",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,css,md,json}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run log && git add . && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,less,css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "chalk": "^4.0.0",
    "commander": "^5.0.0",
    "commitizen": "^4.0.3",
    "conventional-changelog-cli": "^2.0.23",
    "cz-conventional-changelog": "3.1.0",
    "fs-extra": "^9.0.0",
    "husky": "^4.2.5",
    "inquirer": "^7.1.0",
    "lint-staged": "^10.1.3",
    "mem-fs": "^1.1.3",
    "mem-fs-editor": "^6.0.0",
    "prettier": "^1.19.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
